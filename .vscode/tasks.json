{
	"version": "2.0.0",
	"tasks": [
    {
      "type": "shell",
      "label": "Build",
      "command": "source",
      "args": [
        "${workspaceFolder}/.venv/bin/activate",
        "&&",
        "west",
        "build",
        "${workspaceFolder}/app",
        "${input:build-opts}"
      ],
      "options": {
        "env": {
          "BOARD": "pinnacle_100_dvk",
          "ZEPHYR_TOOLCHAIN_VARIANT": "zephyr"
        }
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "west build ${workspaceFolder}/app"
    },
    {
      "type": "shell",
      "label": "Load image via bootloader",
      "command": "newtmgr",
      "args": [
        "-c",
        "serial",
        "image",
        "upload",
        "${workspaceFolder}/build/zephyr/app_update.bin",
        "-e"
      ],
      "options": {},
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "detail": "newtmgr image upload",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Serial Monitor",
      "command": "source",
      "args": [
        "${workspaceFolder}/.venv/bin/activate",
        "&&",
        "pyserial-miniterm",
        "-f",
        "colorize",
        "/dev/ttyACM0",
        "1000000"
      ],
      "options": {},
      "group": "test",
      "detail": "pyserial-minimonitor",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "West Flash",
      "command": "source",
      "args": [
        "${workspaceFolder}/.venv/bin/activate",
        "&&",
        "west",
        "flash",
        "-r",
        "nrfjprog",
        "--erase",
        "--softreset"
      ],
      "options": {},
      "group": {
        "kind": "test"
      },
      "detail": "west flash -r nfrjprog",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "West Flash and Monitor",
      "dependsOn": [
        "West Flash",
        "Serial Monitor"
      ],
      "dependsOrder": "sequence",
      "command": "pwd",
      "args": [],
      "options": {},
      "group": "test",
      "detail": "west flash && serial monitor",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Build AT Client",
      "command": "source",
      "args": [
        "${workspaceFolder}/.venv/bin/activate",
        "&&",
        "west",
        "build",
        "${workspaceFolder}/nrf/samples/nrf9160/at_client/",
        "-p"
      ],
      "options": {
        "env": {
          "BOARD": "circuitdojo_feather_nrf9160_ns",
          "ZEPHYR_TOOLCHAIN_VARIANT": "zephyr"
        }
      },
      "problemMatcher": [],
      "group": "build",
      "detail": "Build AT Client"
    },
  ],
  "inputs": [
    {
      "id": "build-opts",
      "type": "pickString",
      "description": "Build options",
      "options": [
        "",
        "--pristine",
        "--force"
      ]
    }
  ]
}
