{
	"version": "2.0.0",
	"tasks": [
    {
      "type": "shell",
      "label": "Build",
      "command": "west",
      "args": [
        "build",
        "${workspaceFolder}/app",
        "${input:build-opts}"
      ],
      "options": {
        "env": {
          "BOARD": "circuitdojo_feather_nrf9160_ns",
          "ZEPHYR_TOOLCHAIN_VARIANT": "zephyr",
          "ZEPHYR_SDK_INSTALL_DIR": "${HOME}/.local/zephyr-sdk-0.16.0/"
        }
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "west build ${workspaceFolder}/app"
    },
    {
      "type": "shell",
      "label": "Bootloader mode",
      "command": "zephyr-tools",
      "args": [
        "-b",
        "--port",
        "/dev/ttyUSB0"
      ],
      "options": {},
      "group": "none",
      "detail": "zephyr-tools -b",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Load image via bootloader",
      "dependsOn": "Bootloader mode",
      "dependsOrder": "sequence",
      "command": "newtmgr",
      "args": [
        "-c",
        "serial",
        "image",
        "upload",
        "${workspaceFolder}/build/zephyr/app_update.bin"
      ],
      "options": {},
      "group": "none",
      "detail": "newtmgr image upload",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Serial monitor",
      "command": "zephyr-tools",
      "args": [
        "--port",
        "/dev/ttyUSB0",
        "--follow",
        "--save"
      ],
      "options": {},
      "group": "none",
      "detail": "zephyr-tools --follow --save",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "West flash",
      "command": "west",
      "args": [
        "flash",
        "-r",
        "nrfjprog",
        "--erase",
        "--softreset"
      ],
      "options": {},
      "group": "none",
      "detail": "west flash -r nfrjprog",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "West flash and monitor",
      "dependsOn": "West flash",
      "dependsOrder": "sequence",
      "command": "zephyr-tools",
      "args": [
        "--port",
        "/dev/ttyUSB0",
        "--follow",
        "--save"
      ],
      "options": {},
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "detail": "west flash && zephyr-tools --follow",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "build-opts",
      "type": "pickString",
      "description": "Build options",
      "options": [
        "",
        "--pristine",
        "--force"
      ]
    }
  ]
}
