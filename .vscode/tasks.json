{
	"version": "2.0.0",
	"tasks": [
    {
      "type": "shell",
      "label": "west build",
      "command": "west",
      "args": [
        "build",
        "${workspaceFolder}/app",
        "${input:build-opts}"
      ],
      "options": {
        "env": {
          "BOARD": "circuitdojo_feather_nrf9160_ns",
          "ZEPHYR_TOOLCHAIN_VARIANT": "zephyr",
          "ZEPHYR_SDK_INSTALL_DIR": "${HOME}/.local/zephyr-sdk-0.15.2/"
        }
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "west build app"
    },
    {
      "type": "shell",
      "label": "newtmgr image upload",
      "command": "newtmgr",
      "args": [
        "-c",
        "serial",
        "image",
        "upload",
        "${workspaceFolder}/build/zephyr/app_update.bin"
      ],
      "options": {},
      "group": "none",
      "detail": "connstring: 'dev=/dev/ttyUSB0,baud=1000000'",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "west flash",
      "command": "west",
      "args": [
        "flash",
        "-r",
        "nrfjprog",
        "--erase",
        "--softreset"
      ],
      "options": {},
      "group": "none",
      "detail": "flash with nfrjprog",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "build-opts",
      "type": "pickString",
      "description": "Build options",
      "options": [
        "",
        "--pristine",
        "--force"
      ]
    }
  ]
}
